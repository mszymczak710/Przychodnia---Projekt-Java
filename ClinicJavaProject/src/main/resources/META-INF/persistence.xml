<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="MyPersistenUnit"   >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.clinic.database.tables.Doctor</class>
        <class>org.clinic.database.tables.Office</class>
        <class>org.clinic.database.tables.Patient</class>
        <class>org.clinic.database.tables.Prescription</class>
        <class>org.clinic.database.tables.Visit</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.username" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

        </properties>
    </persistence-unit>
</persistence>
